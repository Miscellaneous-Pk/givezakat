      let doajax = function(url,type,headers,datastringified) {
        return new Promise(function(resolve, reject) {
          $.ajax({
              url: url,
              type: type,
              data: datastringified,
              headers: headers,
          }).done((msg) => {
            resolve(msg);
          }).fail((error) => {
            reject(error);
          });
        });
      }

