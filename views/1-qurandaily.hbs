  <body>
    <div class="cover-hero nav-bar">
      <div class="container d-flex justify-content-between align-items-center">
        <div class="logo-area d-flex flex-row">
          <img class="ml-2 my-point5 nav-bar-logo" src="/logo5small.png" width="35px" height="35px" alt="">
          <p class="ml-1 align-self-center text-light">Zakat Lists</p>
        </div>
        <div class="d-md-flex justify-content-around mr-2 d-none">
          {{#if token}}
            <a href="/home/?token={{token}}" class="text-light px-point5 align-self-center">Home</a>
            <a class="text-light px-point5 align-self-center {{profile}}" href="/profile/{{token}}">{{name}}</a>
            <a class="text-light px-point5 align-self-center {{signin}}" href="/logout/{{token}}">Sign out</a>
            <a href="/zakatcalc" class="text-light px-point5 align-self-center {{zakatcalc}}">Calculate Zakat</a>
            <a href="/addpeople/?token={{token}}" class="text-light px-point5 align-self-center {{addpeople}}">Ask 4 Donation</a>
            <a href="/due/?token={{token}}" class="text-light px-point5 align-self-center {{dueStatus}}">Due</a>
          {{else}}
            <a href="/" class="text-light px-point5 align-self-center">Home</a>
            <a href="/signin/home" class="text-light px-point5 align-self-center {{signin}}">Sign in</a>
            <a href="/zakatcalc" class="text-light px-point5 align-self-center {{zakatcalc}}">Calculate Zakat</a>
            <a href="/signin/addpeople" class="text-light px-point5 align-self-center {{addpeople}}">Ask 4 Donation</a>
            <a href="/signin/due" class="text-light px-point5 align-self-center {{dueStatus}}">Due</a>
          {{/if}}
          <span class="due-circle">{{length due}}</span>
        </div>
        <div class="d-md-none mr-2 d-flex align-items-center justify-content-center">
          <img onclick="opennav()" id="nav-open-icon" src="/nav-icon.svg" alt="">
          <span class="due-circle" style="position: absolute;margin-top: -9px;margin-left: 13px;">{{length due}}</span>
        </div>
      </div>
    </div>

