<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raise a Ticket</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:500,700,900|Roboto:100,300i,400,400i,700,900&display=swap" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>

    <style media="screen">


      p {
        font-family: Roboto;
        font-weight: normal;
        font-size: 25px;
        line-height: 1.8;
        color: #828282;
      }

      .container {
        /* border: 1px solid red; */
        width: 1300px;
        max-width: 100vw;
        margin: 0 auto;
        padding: 0 20px;
        box-sizing: border-box;
      }

      h1 {
        font-family: Roboto;
        font-style: normal;
        font-weight: bold;
        font-size: 46px;
        line-height: 1.3;
        width: 100%;
        font-weight: bold;
      }

      .brown {
        color: brown;
      }

      .upper {
        display: flex;
        flex-wrap: wrap;
      }

      .upper > .text {
        width: 60%;
      }

      .text {

        font-size: 22px;
        line-height: 1.8;
        color: lightslategrey;
      }

      .upper > .photo {
        width: 40%;
        border-radius: 50%;
        padding: 20px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        height: max-content;
      }

      .photo > button {
            /* margin-top: 20px; */
        width: fit-content;
        margin: auto;
        margin-top: 20px;
      }

      .photo > img {
        border-radius: 50%;
        padding: 10px;
        box-sizing: border-box;
        background: #f7f7f7;
        margin: auto;
        margin-top: 0;
        width: 250px;
        height: 250px;
      }

      .status_bar {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translate(-50%);
        background: white;
        border-top: 4px solid brown;
        padding: 20px 20px 0 20px;
        box-sizing: border-box;
      }

      .bar {
        position: relative;
        margin-top: 4rem;
        background: #f5f4f4;
        /* box-sizing: border-box; */
        /* max-width: 60%; */
        height: 20px;
        width: 779px;
        border-radius: 10px;
        max-width: 100%;
      }

      .green_bar {
        position: absolute;
        width: 20%;
        /* z-index: 10; */
        background-color: green;
        /* border: 1px solid black; */
        height: 20px;
        box-sizing: border-box;
        border-radius: 10px;
      }


      .greencircle {
        position: absolute;
        top: -39px;
        left: 0;
      }

      .greencircle > span, .yellowcircle > span {
        position: absolute;
        white-space: nowrap;
        top: -41%;
        padding: 12px 29px;
        background: white;
        font-size: 22px;
        color: lightslategrey;
        font-weight: bold;
      }

      .greencircle > span {
        left: 0;
        border: 1px solid green;
      }

      .yellowcircle > span {
        right: 0;
        border: 1px solid lightgray;
      }

      .yellowcircle {
        position: absolute;
        top: -39px;
        left: 97%;
      }

      .counter {
        font-weight: bold;
        font-size: x-large;
        margin-left: auto;
      }

      .status_bar > button {
        /* float: left; */
      }

      .status_bar > *:nth-child(2) {
        display: flex;
        width: 100%;
        padding: 20px 12px;
        box-sizing: border-box;
        align-items: center;
        max-width: 799px;
      }

      button, input[type="submit"] {
        padding: 12px 16px;
        border: none;
        font-family: Roboto;
        font-size: 18px;
        font-weight: 400;
        margin-right: 8px;
        margin-bottom: 13px;
      }

      button.primary, input[type="submit"].primary {
        color: white;
        background: green;
        border: 1px solid green;
      }

      button.secondary {
        color: green;
        background: white;
        border: 1px solid green;
      }

      button.danger {
        color: white;
        background: brown;
        border: 1px solid brown;
      }

      .modal {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: white;
        border: 4px solid brown;
        box-sizing: border-box;
        padding: 0 20px;
        overflow: scroll;
      }

      .selectBox > span {
        width: 86px;
        height: 45px;
        background: white;
        border: 1px solid lightgrey;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 2px 0;
        font-family: Montserrat;
        color: grey;
      }

      span.active {
        background: green;
        color: white;
        border: 1px solid green;
      }

      .bold {
        font-weight: bold;
      }

      .green {
        color: green;
      }

      .d-none {
        display: none;
      }

      input, textarea, input::placeholder, textarea::placeholder {
        font-style: inherit;
        font-family: inherit;
        font-size: inherit;
        color: inherit;
        width: inherit;
        border: none;
        background: #f1f1f1;
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
      }

      input, input::placeholder {
        padding: 10px;
        font-weight: bold;
      }

      textarea, textarea::placeholder {
        font-family: roboto;
        font-size: 22px;
        color: darkslategrey;
        line-height: 1.8;
        padding: 10px;
      }

      #Turl {
        font-family: monospace;
        font-size: 18px;
        background: lavender;
        padding: 20px;
      }

      .mt-1 {
        margin-top: 10px;
      }

      input.primary {
        width: min-content;
        background: #f7f7f7;
        padding: 12px 16px;
        margin: auto;
        margin-top: 10px;
        box-sizing: border-box;
        max-width: 100%;
      }

      .ser {
        border-bottom: 4px solid brown;
      }
    </style>
  </head>
  <body>

    <div class="container">

      {{> breadcrumb page=this.page}}

      <div class="upper">
        <p class="ser">Ticket # {{msg.ser}}</p>
        <h1 class="brown">
          <input id="heading" type="text" name="" value="{{msg.heading}}" placeholder="Write here">
        </h1>
        <div class="text">
          <textarea id="description" name="name" rows="15" cols="80" placeholder="Write here">{{msg.description}}</textarea>
        </div>
        <div class="photo">
          <img id="blah" src="{{msg.img}}" alt="">
          <input class="primary" type="file" id="img" name="img" accept="image/*" onchange="readURL(this);">
        </div>
      </div>

      <h1><b class="brown">Step 2</b>. Write important details about you. If in hurry, enter WhatsApp number.</h1>

      <textarea id="personal" name="name" rows="8" cols="80" placeholder="Write here">{{msg.personal}}</textarea>

      <button id="createTicket" type="button" name="button" class="primary mt-1" onclick="">
        {{#if msg._id}}
        Update Ticket
        {{else}}
        Create Ticket
        {{/if}}
      </button>

      <div class="stage d-none">
        <h1><b class="brown">Step 3</b>. Share your ticket</h1>
        <p>Your ticket has beeen generated.</p>
        <p id="Turl">https://wwww.zakatlists.com/tkt/laurelhomeschool</p>

        <button class="primary" type="button" name="button" onclick="copyText(`#Turl`)">Copy the URL</button>
        <p>Copy above url and share on whatsapp / facebook / twitter.</p>
      </div>


      <h1><b class="brown">Confused</b>? Ask me</h1>
      <p>I will get back to you as soon as I read your message.</p>
      <button class="primary" type="button" name="button" onclick="window.open(`https://wa.me/923235168638`,'_blank')">Message on WhatsApp</button>

    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="  crossorigin="anonymous"></script>

    <script type="text/javascript">

    var copyText = function(msg) {
      // alert($(`${msg}`).html())
      var dummy = document.createElement("textarea");
      // to avoid breaking orgain page when copying more words
      // cant copy when adding below this code
      // dummy.style.display = 'none'
      document.body.appendChild(dummy);
      //Be careful if you use texarea. setAttribute('value', value), which works with "input" does not work with "textarea". â€“ Eduard
      dummy.value = $(`${msg}`).html();
      dummy.select();
      document.execCommand("copy");
      document.body.removeChild(dummy);
      alert(`"${dummy.value}" \nhas been copied to the clipboard`)
    }

    let toggleModal = function() {
      $('.modal').toggleClass('d-none');
    }

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#createTicket').click(function() {

      switch (true) {
        case /quranDailyImages/.test($('#blah').attr('src')):
          return alert('please upload the image')
          break;
        case $('#heading').val().length < 1:
          return alert ('please write the heading in the field above.');
          break;
        case $('#description').val().length < 1:
          return alert ('please write the description in the field above.');
        case $('#personal').val().length < 1:
          return alert ('please write the personal in the field above.');
      }
      // return console.log('all good');

      let data = {
        ser: `{{msg.ser}}`,
        query: 'createTicket',
        blah: $('#blah').attr('src'),
        heading: $('#heading').val(),
        description: $('#description').val(),
        personal: $('#personal').val(),
        public_id: `{{msg.public_id}}`
      }

      // return console.log(data);
      $(this).html('Creating Ticket...');

      // now save everything in the query to mongo

      data = JSON.stringify(data);

      $.ajax({
          url: '/saveticket',
          type: 'post',
          data,
          headers: {
              'content-type': 'application/json',
          }
        }).done((msg) => {
          console.log(msg);
          $(this).html('Ticket Generated');
          alert('ticket has been created');
          switch (true) {
            case /editticket/.test(window.location.href):
              $('#Turl').html(`${window.location.href.split('editticket')[0]}ticket?ser=${msg.ser}`);
              break;
            case /createticket/.test(window.location.href):
              $('#Turl').html(`${window.location.href.split('createticket')[0]}ticket?ser=${msg.ser}`);
              break;
          }
          $('.stage').toggleClass('d-none');
          // window.location.assign('/tickets');
        }).fail((e) => {
          $(this).html(`Error: ${e.responseText}`);
          console.log(e);
        });


    })

    </script>
  </body>
</html>
