    <script src="https://code.jquery.com/jquery-3.3.1.min.js"  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="  crossorigin="anonymous"></script>

    <script type="text/javascript">

    $(document).ready(function() {
      console.log('hello');
      $('.selectBox > span:eq(0)').trigger('click');
    })

    let toggleModal = function() {
      $('.modal').toggleClass('d-none');
    }

    let toggleDonation = function() {
      $('.donations').toggleClass('d-none');
    }

    $('.selectBox > span').on('click', function() {
      $('.selectBox > span').removeClass('active');
      $(this).toggleClass('active');
      let value = $(this).text();
      $('.selectBoxOut > span:nth-child(1)').html(`${value}.00`);
      $.get( `/secret?amount=${$(this).text()}00`, function( data ) {
        console.log(data);
        $('#payment-form').attr('code',data);
        $(`#payment-form > #submit`).html(`Donate ${value}.00 USD`);
      })
      .catch(e => {
        console.log(e);
        $('#payment-form > #submit').html(e.responseText);
      })
    })

// STRIPE Payment

    var stripe = Stripe(`{{publishableKey}}`);
    var elements = stripe.elements();

    // Set up Stripe.js and Elements to use in checkout form
    var style = {
      base: {
        color: "#32325d",
        fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
        fontSmoothing: "antialiased",
        fontSize: "20px",
        "::placeholder": {
          color: "#aab7c4"
        }
      },
      invalid: {
        color: "#fa755a",
        iconColor: "#fa755a"
      }
    };

    var card = elements.create("card", { style: style });

    card.mount("#card-element");

    card.addEventListener('change', ({error}) => {
      const displayError = document.getElementById('card-errors');
      if (error) {
        $('#payment-form > #submit').html(error.message);
      } else {
        displayError.textContent = '';
      }
    });

    var form = document.getElementById('payment-form');

    form.addEventListener('submit', function(ev) {
      ev.preventDefault();
      $('#payment-form > #submit').html('Processing payment...');
      stripe.confirmCardPayment($('#payment-form').attr('code'), {
        payment_method: {
          card: card,
          // billing_details: {
          //   name: 'Jenny Rosen',
          //   email: 'qasimali24@gmail.com'
          // }
        }
      }).then(function(result) {
        if (result.error) {
          // Show error to your customer (e.g., insufficient funds)
          console.log(result.error);
          $('#payment-form > #submit').html(result.error.message);
        } else {
          // The payment has been processed!
          console.log(result);
          if (result.paymentIntent.status === 'succeeded') {
            $('#payment-form > #submit').html('Payment was successful. Thanks');
            updateDonation(result.paymentIntent.amount.toString().slice(0, -2));
          }
        }
      });
    });

    let updateDonation = (amount) => {

      let data = {
        ser: `{{msg.ser}}`,
        amount: amount,
        client_secret: $('#payment-form').attr('code'),
        comment: 'Credit Card Payment'
      }

      console.log(data);

      data = JSON.stringify(data);

      $.ajax({
          url: '/addStripeDonation',
          type: 'post',
          data,
          headers: {
              'content-type': 'application/json',
          }
        }).done((msg) => {
          console.log(msg);
          // $(this).html('Donation Added !');
          // window.location.assign('/updateDonations?ser={{msg.ser}}');
          // $('.stage').toggleClass('d-none');
          // window.location.assign('/tickets');
        }).fail((e) => {
          // $(this).html(`Error: ${e.responseText}`);
          console.log(e);
        });

    }

    // STRIPE ends here

    $('.drop_toggle').on('click',function() {
      let target = $(this).attr('data-target');
      $('.drop_target').addClass('d-none');
      $(`[data-parent=${target}]`).toggleClass('d-none');
    })
    </script>
