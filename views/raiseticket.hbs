      .donation > * {
        margin: 0;
        padding: 0;
      }

      .donation .amount {
        font-weight: bold;
        font-size: 35px;
        color: white;
        text-align: center;
        background: brown;
        padding: 10px;
      }

      .donation .comment {
        font-size: 16px;
          /* color: #5f5f5f; */
        line-height: 1.4;
        padding: 10px;
      }

      .donation small {
        margin-top: -3px;
        display: block;
        color: #b5b5b5;
        padding: 10px;
      }

      @media (max-width: 700px) {
        p {
          font-size: 17px;
        }

        h1 {
          font-size: 35px;
        }

        .upper > h1 {
          order: 1;
        }

        .upper > .photo {
          order: 2;
        }

        .upper > .text {
          order: 3;
          width: 100%;
        }

        .text > p {
          font-size: 17px;
        }

        .upper > .photo {
          width: 78%;
          padding: 0px;
          display: block;
        }

        .donation {
          width: 48%;
          max-width: 161px;
        }

        .status_bar {
          padding: 20px 20px 0 9px;
        }

        .div_2 {
          padding: 21px 0px 15px 0px;
        }


        .div_2 > button {
          padding: 12px 12px;
          font-size: 12px;
          margin-right: 4px;
          white-space: nowrap;
        }

        .greencircle > span, .yellowcircle > span {
            padding: 12px 15px;
            font-size: 12px;
        }
      }
    </style>
  </head>
