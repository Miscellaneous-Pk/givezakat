        box-shadow: 0 1px 3px 0 #cfd7df;
      }

      .MyCardElement--invalid {
        border-color: #fa755a;
      }

      .MyCardElement--webkit-autofill {
        background-color: #fefde5 !important;
      }

      .bold {
        font-weight: bold;
      }

      .green {
        color: green;
      }

      .d-none {
        display: none;
      }


      .drop_target {
        background: #007f01;
        padding: 1px 10px;
        box-sizing: border-box;
        margin: 20px 0;
