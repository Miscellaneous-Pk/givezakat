        font-size: 18px;
      }

      .drop_target > h6 {
        font-size: 18px;
        margin: 0;
        font-style: italic;
        color: white;
        text-decoration: underline;
      }

      .drop_target a {
        text-decoration: none;
        color: lightskyblue;
      }

      button:focus {
        background: green;
        color: white;
      }

      .text h3 {
        border-bottom: 4px solid brown;
        color: brown;
      }

      .donation {
        margin: 2px 2px 2px 0;
        display: inline-block;
        width: 25%;
        background: #FFFFFF;
        box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.25);
